{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MystiMons Deck",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "name", "format", "version", "cards"],
  "properties": {
    "id": { "type": "string", "minLength": 3 },
    "name": { "type": "string", "minLength": 1 },
    "format": { "type": "string", "enum": ["EINFACH", "STANDARD", "TURNIER"] },
    "version": { "type": "string" },
    "owner_id": { "type": "string" },
    "notes": { "type": "string" },
    "cards": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["card_id", "count"],
        "properties": {
          "card_id": { "type": "string", "minLength": 3 },
          "count": { "type": "integer", "minimum": 1, "maximum": 99 }
        }
      }
    },
    "sideboard": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["card_id", "count"],
        "properties": {
          "card_id": { "type": "string", "minLength": 3 },
          "count": { "type": "integer", "minimum": 1, "maximum": 99 }
        }
      }
    }
  }
}
