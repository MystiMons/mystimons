{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MystiMons TCG Deck",
  "type": "object",
  "required": [
    "deck_id",
    "format",
    "cards"
  ],
  "properties": {
    "deck_id": {
      "type": "string"
    },
    "owner_id": {
      "type": "string"
    },
    "format": {
      "type": "string",
      "enum": [
        "EINFACH",
        "STANDARD",
        "TURNIER"
      ]
    },
    "name": {
      "type": "string"
    },
    "cards": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "card_id",
          "count"
        ],
        "properties": {
          "card_id": {
            "type": "string"
          },
          "count": {
            "type": "integer",
            "minimum": 1,
            "maximum": 99
          }
        },
        "additionalProperties": false
      }
    },
    "sideboard": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "card_id",
          "count"
        ],
        "properties": {
          "card_id": {
            "type": "string"
          },
          "count": {
            "type": "integer",
            "minimum": 1,
            "maximum": 99
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}